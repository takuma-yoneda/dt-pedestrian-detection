<?xml version="1.0" encoding="utf-8"?>
<launch>
    <arg name="veh" default="$(env VEHICLE_NAME)"/>
    <arg name="pkg_name" value="pedestrian_detection"/>
    <arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>
    <arg name="node_name" default="pedestrian_detection_node"/>
	<arg name="camera_topic" default="camera_node"/>

    <group ns="$(arg veh)">
        <remap from="$(arg node_name)/img_compressed" to="$(arg camera_topic)/image/compressed"/>
        <remap from="$(arg node_name)/detection_score" to="pedestrian_detection/score"/>
        <remap from="$(arg node_name)/detection" to="pedestrian_detection/detection"/>

        <node name="$(arg node_name)" pkg="$(arg pkg_name)" type="$(arg node_name).py" output="screen" >
          <rosparam command="load" file="$(find pedestrian_detection)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
        </node>
    </group>
</launch>
